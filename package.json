{
  "name": "@cerealean/markdown-bbcode-converter",
  "version": "1.0.0",
  "description": "A Node.js library for converting GitHub-flavored Markdown to BBCode or WorldAnvil BBCode",
  "main": "dist/main.js",
  "types": "dist/main.d.ts",
  "files": [
    "dist/**/*",
    "src/**/*",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsc",
    "build:watch": "tsc --watch",
    "clean": "rimraf dist",
    "prebuild": "npm run clean",
    "test": "jest",
    "test:async": "jest --maxWorkers=50% --workerThreads",
    "test:parallel": "jest --maxWorkers=100%",
    "test:fast": "jest --maxWorkers=50% --workerThreads --bail --passWithNoTests",
    "test:watch": "jest --watch --maxWorkers=25%",
    "test:watch:async": "jest --watch --maxWorkers=50% --workerThreads",
    "test:coverage": "jest --coverage --maxWorkers=50%",
    "test:coverage:async": "jest --coverage --maxWorkers=50% --workerThreads",
    "test:ci": "jest --ci --maxWorkers=50% --coverage --passWithNoTests",
    "test:debug": "jest --runInBand --detectOpenHandles --verbose",
    "example": "npm run build && node dist/example.js",
    "lint": "eslint src/ tests/ --ext .ts",
    "prepare": "husky install && npm run build",
    "commitlint": "commitlint --edit",
    "prepublishOnly": "npm run build && npm test"
  },
  "keywords": [
    "markdown",
    "bbcode",
    "worldanvil",
    "converter",
    "github-flavored-markdown"
  ],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@commitlint/cli": "^17.0.0",
    "@commitlint/config-conventional": "^17.0.0",
    "@faker-js/faker": "^9.9.0",
    "@types/jest": "^29.0.0",
    "@types/node": "^20.0.0",
    "@typescript-eslint/eslint-plugin": "^8.39.1",
    "@typescript-eslint/parser": "^8.39.1",
    "eslint": "^8.0.0",
    "husky": "^8.0.0",
    "jest": "^29.0.0",
    "lint-staged": "^16.1.5",
    "rimraf": "^5.0.10",
    "ts-jest": "^29.0.0",
    "ts-node": "^10.0.0",
    "typescript": "^5.0.0"
  },
  "engines": {
    "node": ">=14.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/markdown-bbcode-converter.git"
  },
  "bugs": {
    "url": "https://github.com/yourusername/markdown-bbcode-converter/issues"
  },
  "homepage": "https://github.com/yourusername/markdown-bbcode-converter#readme",
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "lint-staged": {
    "src/**/*.ts": [
      "eslint --fix"
    ],
    "tests/**/*.ts": [
      "eslint --fix"
    ]
  }
}
