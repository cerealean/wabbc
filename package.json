{
  "name": "markdown-bbcode-converter",
  "version": "1.0.0",
  "description": "A Node.js library for converting GitHub-flavored Markdown to BBCode or WorldAnvil BBCode",
  "main": "dist/main.js",
  "types": "dist/main.d.ts",
  "files": [
    "dist/**/*",
    "src/**/*",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsc",
    "build:watch": "tsc --watch",
    "clean": "rimraf dist",
    "prebuild": "npm run clean",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "example": "npm run build && node dist/example.js",
    "lint": "eslint src/ tests/ --ext .ts",
    "prepare": "husky install && npm run build",
    "commitlint": "commitlint --edit",
    "prepublishOnly": "npm run build && npm test"
  },
  "keywords": [
    "markdown",
    "bbcode",
    "worldanvil",
    "converter",
    "github-flavored-markdown"
  ],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@commitlint/cli": "^17.0.0",
    "@commitlint/config-conventional": "^17.0.0",
    "@types/jest": "^29.0.0",
    "@types/node": "^20.0.0",
    "eslint": "^8.0.0",
    "husky": "^8.0.0",
    "jest": "^29.0.0",
    "rimraf": "^5.0.10",
    "ts-jest": "^29.0.0",
    "ts-node": "^10.0.0",
    "typescript": "^5.0.0"
  },
  "engines": {
    "node": ">=14.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/markdown-bbcode-converter.git"
  },
  "bugs": {
    "url": "https://github.com/yourusername/markdown-bbcode-converter/issues"
  },
  "homepage": "https://github.com/yourusername/markdown-bbcode-converter#readme",
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  }
}
